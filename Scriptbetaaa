    -- Fun√ß√£o melhorada para criar bot√µes toggle
    local function CreateToggle(parent, text, yPos, setting, callback, color)
        local frame = Instance.new("Frame")
        frame.Parent = parent
        frame.BackgroundColor3 = Color3.fromRGB(35, 35, 45)
        frame.BackgroundTransparency = 0.2
        frame.BorderSizePixel = 0
        frame.Size = UDim2.new(1, -10, 0, 55)
        frame.Position = UDim2.new(0, 5, 0, yPos)

        local corner = Instance.new("UICorner")
        corner.Parent = frame
        corner.CornerRadius = UDim.new(0, 12)

        local label = Instance.new("TextLabel")
        label.Parent = frame
        label.BackgroundTransparency = 1
        label.Size = UDim2.new(0.6, -10, 1, 0)
        label.Position = UDim2.new(0, 15, 0, 0)
        label.Font = Enum.Font.Gotham
        label.Text = text
        label.TextColor3 = Color3.fromRGB(255, 255, 255)
        label.TextSize = 17
        label.TextXAlignment = Enum.TextXAlignment.Left

        local button = Instance.new("TextButton")
        button.Parent = frame
        button.BackgroundColor3 = setting and Color3.fromRGB(0, 200, 100) or Color3.fromRGB(200, 70, 70)
        button.BorderSizePixel = 0
        button.Size = UDim2.new(0.3, -10, 0, 35)
        button.Position = UDim2.new(0.7, 0, 0.5, -17.5)
        button.Font = Enum.Font.GothamBold
        button.Text = setting and "ATIVADO" or "DESATIVADO"
        button.TextColor3 = Color3.fromRGB(255, 255, 255)
        button.TextSize = 14
        button.AutoButtonColor = false

        local btnCorner = Instance.new("UICorner")
        btnCorner.Parent = button
        btnCorner.CornerRadius = UDim.new(0, 10)

        -- Efeito hover
        button.MouseEnter:Connect(function()
            TweenService:Create(button, TweenInfo.new(0.2), {
                BackgroundColor3 = setting and Color3.fromRGB(0, 220, 120) or Color3.fromRGB(220, 90, 90),
                Size = UDim2.new(0.31, -10, 0, 37)
            }):Play()
        end)

        button.MouseLeave:Connect(function()
            TweenService:Create(button, TweenInfo.new(0.2), {
                BackgroundColor3 = setting and Color3.fromRGB(0, 200, 100) or Color3.fromRGB(200, 70, 70),
                Size = UDim2.new(0.3, -10, 0, 35)
            }):Play()
        end)

        button.MouseButton1Click:Connect(function()
            setting = not setting
            button.BackgroundColor3 = setting and Color3.fromRGB(0, 200, 100) or Color3.fromRGB(200, 70, 70)
            button.Text = setting and "ATIVADO" or "DESATIVADO"
            if callback then callback(setting) end
        end)

        return frame, 60
    end

    -- Fun√ß√£o melhorada para criar slider
    local function CreateSlider(parent, text, yPos, min, max, setting, callback)
        local frame = Instance.new("Frame")
        frame.Parent = parent
        frame.BackgroundColor3 = Color3.fromRGB(35, 35, 45)
        frame.BackgroundTransparency = 0.2
        frame.BorderSizePixel = 0
        frame.Size = UDim2.new(1, -10, 0, 80)
