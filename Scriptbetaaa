    -- Toggle Aimbot
    local aimFrame, aimHeight = CreateToggle(Container, "Ativar Aimbot", yPos, Settings.AimbotEnabled, function(value)
        Settings.AimbotEnabled = value
    end)
    yPos = yPos + aimHeight

    -- Toggle FOV
    local fovToggleFrame, fovToggleHeight = CreateToggle(Container, "Mostrar FOV", yPos, Settings.FOVEnabled, function(value)
        Settings.FOVEnabled = value
    end)
    yPos = yPos + fovToggleHeight

    -- Slider FOV
    local fovSliderFrame, fovSliderHeight = CreateSlider(Container, "Tamanho FOV", yPos, 50, 400, Settings.FOVRadius, function(value)
        Settings.FOVRadius = value
    end)
    yPos = yPos + fovSliderHeight

    -- Wall Check
    local wallFrame, wallHeight = CreateToggle(Container, "Wall Check", yPos, Settings.WallCheck, function(value)
        Settings.WallCheck = value
    end)
    yPos = yPos + wallHeight

    -- Team Check
    local teamFrame, teamHeight = CreateToggle(Container, "Team Check", yPos, Settings.TeamCheck, function(value)
        Settings.TeamCheck = value
    end)
    yPos = yPos + teamHeight

    -- Se√ß√£o ESP
    local espSection = Instance.new("TextLabel")
    espSection.Parent = Container
    espSection.BackgroundTransparency = 1
    espSection.Size = UDim2.new(1, 0, 0, 30)
    espSection.Position = UDim2.new(0, 0, 0, yPos)
    espSection.Font = Enum.Font.GothamBold
    espSection.Text = "üëÅÔ∏è ESP"
    espSection.TextColor3 = Color3.fromRGB(100, 255, 150)
    espSection.TextSize = 22
    espSection.TextXAlignment = Enum.TextXAlignment.Left
    yPos = yPos + 35

    -- Toggle ESP
    local espFrame, espHeight = CreateToggle(Container, "Ativar ESP", yPos, Settings.ESPEnabled, function(value)
        Settings.ESPEnabled = value
    end)
    yPos = yPos + espHeight

    -- Ajustar canvas size
    Container.CanvasSize = UDim2.new(0, 0, 0, yPos + 20)

    print("‚úÖ Interface Soterano HUB criada com sucesso!")
end

-- Fun√ß√£o para criar c√≠rculo FOV
local function UpdateFOVCircle()
    if Settings.AimbotEnabled and Settings.FOVEnabled then
        if not FOVCircle then
            FOVCircle = Instance.new("Frame")
            FOVCircle.Name = "FOVCircle"
            FOVCircle.Parent = ScreenGui
            FOVCircle.BackgroundTransparency = 1
            FOVCircle.BorderSizePixel = 2
            FOVCircle.BorderColor3 = Settings.FOVColor
            FOVCircle.Size = UDim2.new(0, Settings.FOVRadius * 2, 0, Settings.FOVRadius * 2)
            FOVCircle.Position = UDim2.new(0.5, -Settings.FOVRadius, 0.5, -Settings.FOVRadius)
            FOVCircle.ZIndex = 1000

            local circleCorner = Instance.new("UICorner")
            circleCorner.Parent = FOVCircle
            circleCorner.CornerRadius = UDim.new(0.5, 0)
            
            local stroke = Instance.new("UIStroke")
            stroke.Parent = FOVCircle
            stroke.Color = Settings.FOVColor
            stroke.Thickness = 2
        end
    elseif FOVCircle then
        FOVCircle:Destroy()
        FOVCircle = nil
    end
end

-- Fun√ß√£o ESP
local function UpdateESP()
    if not Settings.ESPEnabled then
        -- Limpar ESP antigo
        for _, part in pairs(ESPCache) do
            pcall(function() part:Destroy() end)
        end
        ESPCache = {}
        return
    end
    
    for _, player in ipairs(Players:GetPlayers()) do
        if player ~= LocalPlayer and IsPlayerAlive(player) and not IsTeamMate(player) then
            local character = player.Character
            if character then
                for _, part in ipairs(character:GetChildren()) do
                    if part:IsA("BasePart") and part.Name ~= "HumanoidRootPart" then
                        local key = part:GetFullName()
                        if not ESPCache[key] then
                            local highlight = Instance.new("BoxHandleAdornment")
                            highlight.Name = "ESP_Outline"
                            highlight.Adornee = part
                            highlight.ZIndex = 10
                            highlight.Size = part.Size + Vector3.new(0.1, 0.1, 0.1)
                            highlight.Color3 = Color3.fromRGB(255, 50, 50)
                            highlight.Transparency = 0.4
                            highlight.AlwaysOnTop = true
                            highlight.Parent = part
                            ESPCache[key] = highlight
                        end
                    end
                end
            end
        end
    end
end

-- Loop principal
RunService.RenderStepped:Connect(function()
    -- Atualizar FOV Circle
    UpdateFOVCircle()
    
    -- Aimbot
    if Settings.AimbotEnabled then
        local target = GetClosestTarget()
        if target and target.Character then
            local head = target.Character:FindFirstChild("Head")
            if head then
                -- Mira suave
                local targetPos = head.Position
                Camera.CFrame = CFrame.lookAt(Camera.CFrame.Position, targetPos)
            end
        end
    end
    
    -- ESP
    UpdateESP()
end)

-- Toggle UI com tecla
UserInputService.InputBegan:Connect(function(input)
    if input.KeyCode == Settings.ToggleKey then
        if MainFrame then
            MainFrame.Visible = not MainFrame.Visible
        end
    end
end)

-- Inicializar
pcall(function()
    CreateUI()
    print("üöÄ Soterano HUB carregado com sucesso!")
    print("üìå Pressione RightShift para abrir/fechar")
end)
